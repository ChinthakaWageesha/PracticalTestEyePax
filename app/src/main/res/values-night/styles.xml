<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.PracticalTest" parent="Theme.MaterialComponents.Light.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/colorTextSecondary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondary</item>
        <item name="colorOnSecondary">@color/colorTextPrimary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorOnPrimary</item>
        <item name="android:windowBackground">@color/colorAppBackground</item>
    </style>

    <!--No Actionbar-->
    <style name="Theme.PracticalTest.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!--Splash Theme-->
    <style name="Theme.PracticalTest.Splash">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowDrawsSystemBarBackgrounds" tools:targetApi="lollipop">true</item>
        <item name="android:windowTranslucentStatus" tools:targetApi="kitkat">true</item>
        <item name="android:windowBackground">@drawable/bg_splash</item>
    </style>

    <!--Progress bar Loader style-->
    <style name="ProgressbarStyle" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="android:alertDialogStyle">@style/CustomAlertDialogStyle</item>
        <item name="android:windowBackground">@color/colorTransparent</item>
        <item name="android:textColorPrimary">@color/colorWhite</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textStyle">normal</item>
    </style>

    <!--custom dialog style-->
    <style name="CustomAlertDialogStyle">
        <item name="android:bottomBright">@color/colorTransparent</item>
        <item name="android:bottomDark">@color/colorTransparent</item>
        <item name="android:bottomMedium">@color/colorTransparent</item>
        <item name="android:centerBright">@color/colorTransparent</item>
        <item name="android:centerDark">@color/colorTransparent</item>
        <item name="android:centerMedium">@color/colorTransparent</item>
        <item name="android:fullBright">@color/colorTransparent</item>
        <item name="android:fullDark">@color/colorTransparent</item>
        <item name="android:topBright">@color/colorTransparent</item>
        <item name="android:topDark">@color/colorTransparent</item>
    </style>

    <!--Text input layout theme-->
    <style name="TextInputTheme">
        <item name="android:textColorHighlight">@color/colorAccent</item>
        <item name="android:textColorLink">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorAccent">@color/colorTextPrimary</item>
        <item name="colorControlNormal">@color/colorAccent</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">bottom</item>
        <item name="colorControlActivated">@color/colorAccent</item>
    </style>

    <!--Toolbar title style-->
    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextSmallPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextMediumPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextMediumPlusPrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextLargePrimary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextExLargePrimaryBold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <style name="TextSmallSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextMediumSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextLargeSecondary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
    </style>

    <style name="TextLargeTertiary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextTertiary</item>
    </style>

    <style name="TextLargeQuaternary" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorTextQuaternary</item>
    </style>

    <!--Bottom navigation active text style-->
    <style name="BottomNavigationActiveTextStyle">
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Bottom navigation inactive text style-->
    <style name="BottomNavigationInactiveTextStyle">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Edit text style-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editTextHeight</item>
        <item name="android:paddingHorizontal">@dimen/horizontalMargin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:background">@drawable/edit_text_disable</item>
    </style>

    <!--Button style to state button enable or disable-->
    <style name="EnableDisableButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_enable_disable</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/button_text_enable_disable</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/buttonElevation</item>
    </style>

    <!--Primary button style-->
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_gradient_primary_corners_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/buttonElevation</item>
    </style>

</resources>