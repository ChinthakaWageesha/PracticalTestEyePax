<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!--Text input layout theme-->
    <style name="TextInputTheme">
        <item name="android:textColorHighlight">@color/colorPink</item>
        <item name="android:textColorLink">@color/colorPink</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="colorAccent">@color/colorBlack</item>
        <item name="colorControlNormal">@color/colorPink</item>
        <item name="android:textStyle">normal</item>
        <item name="android:gravity">bottom</item>
        <item name="colorControlActivated">@color/colorPink</item>
    </style>

    <!--Toolbar title style-->
    <style name="ToolbarTitleStyle">
        <item name="android:textColor">@color/colorPink</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="TextSmallBlack" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">13sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextMediumBlack" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextMediumPlusBlack" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextLargeBlack" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextExLargeBlackBold" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="TextLargeRed" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorRed</item>
    </style>

    <style name="TextLargeBlue" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorBlue</item>
    </style>

    <style name="TextSmallWhite" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextWhite" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextMediumWhite" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <style name="TextLargeWhite" parent="Widget.AppCompat.TextView">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">17sp</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!--Bottom navigation active text style-->
    <style name="BottomNavigationActiveTextStyle">
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Bottom navigation inactive text style-->
    <style name="BottomNavigationInactiveTextStyle">
        <item name="android:textColor">@color/colorTextGray</item>
        <item name="android:fontFamily">@font/nunito_regular</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!--Edit text style-->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/editTextHeight</item>
        <item name="android:paddingHorizontal">@dimen/horizontalMargin</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">normal</item>
        <item name="android:maxLines">1</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/nunito_semi_bold</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:background">@drawable/edit_text_disable</item>
    </style>

    <!--Button style to state button enable or disable-->
    <style name="EnableDisableButtonStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/button_enable_disable</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@drawable/button_text_enable_disable</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/buttonElevation</item>
    </style>

    <!--Primary button style-->
    <style name="Button" parent="TextAppearance.AppCompat.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/buttonHeight</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:background">@drawable/bg_gradient_red_corners_16</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:fontFamily">@font/nunito_bold</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:elevation">@dimen/buttonElevation</item>
    </style>

</resources>